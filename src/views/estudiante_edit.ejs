<%- include('partials/_header'); %>
    
    <div class="container mt-5">
        <div class="row">
            <div class="col md-5 offset-md-3 card">
                <div class="card">
                    <div class="card-body">
                        <form action="/update/<%= data.id %>" method="POST">
                            <div class="form-group mt-2">
                              <input
                                type="text"
                                name="ncontrol"
                                value="<%= data.ncontrol %>"
                                class="form-control"
                              />
                            </div>
                            <div class="form-group mt-2">
                              <input
                                type="text"
                                name="nombre"
                                value="<%= data.nombre%>"
                                class="form-control"
                              />
                            </div>
                            <div class="form-group mt-2">
                              <input
                                type="text"
                                name="email"
                                value="<%= data.email %>"
                                class="form-control"
                              />
                            </div>
                            <div class="form-group mt-2">
                              <input
                                type="text"
                                name="telefono"
                                value="<%= data.telefono %>" 
                                class="form-control"
                              />
                              <button type="submit" class="btn-btn-primary mt-3">
                                Editar datos
                              </button>
                            </div>
                          </form>
                    </div>
                </div>
            </div>
        </div>
    </div>




<%- include('partials/_footer'); %>